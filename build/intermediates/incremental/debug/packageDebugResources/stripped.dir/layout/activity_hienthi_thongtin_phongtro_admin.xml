<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B2C4">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF0057"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/titleLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN TÀI KHOẢN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_marginTop="3dp"

        android:background="#F6B2C4"
        android:padding="16dp"> <!-- Đặt ScrollView bên dưới LinearLayout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Tên phòng"

            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/editTenPhong"
            android:paddingLeft="10dp"
            android:focusableInTouchMode="false"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tên phòng" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Diện tích (m2)"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/editDienTich"
            android:inputType="number"
            android:focusableInTouchMode="false"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Diện tích" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Mô tả"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/editMoTa"
            android:paddingLeft="10dp"
            android:focusableInTouchMode="false"
            android:maxLines="30"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Mô tả" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Giá tiền/tháng"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/editGiaTien"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Giá tiền" />
        <TextView

            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:paddingLeft="0dp"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="60dp"
                android:background="#CFE6CF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"


                android:layout_height="60dp"
                android:text="Chọn hình ảnh" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="60dp"
                android:background="#CFE6CF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:text="Chọn hình ảnh" />
            <ImageView
                android:id="@+id/img3"
                android:layout_width="60dp"
                android:background="#CFE6CF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:text="Chọn hình ảnh" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="60dp"
                android:background="#CFE6CF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:text="Chọn hình ảnh" />
            <ImageView
                android:id="@+id/img5"
                android:layout_width="60dp"
                android:background="#CFE6CF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:text="Chọn hình ảnh" />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
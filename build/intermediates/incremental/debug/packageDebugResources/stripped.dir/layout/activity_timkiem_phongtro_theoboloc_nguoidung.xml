<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tendn"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#d81f51"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/img"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_marginBottom="7dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:hint="  Từ ...........(vnđ)"
                android:id="@+id/batdautu"
                android:textSize="17sp"
                android:scrollHorizontally="true"
                android:maxLines="1"

                android:inputType="text"
                android:ellipsize="end"
                android:paddingLeft="14dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_height="50dp"/>

            <EditText
                android:layout_width="150dp"
                android:hint="   Đến ........(vnđ)  "
                android:id="@+id/den"
                android:textSize="17sp"
                android:scrollHorizontally="true"
                android:maxLines="1"
android:paddingLeft="14dp"
                android:inputType="text"
                android:ellipsize="end"
                android:background="@drawable/edittext"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="50dp"
                android:id="@+id/loc"
                android:layout_height="50dp"
                android:background="@drawable/loc"/>
        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:text="Trọ bạn tìm kiếm .."
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

</TextView>
    <GridView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:numColumns="2"
        android:layout_marginBottom="20dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"/>

    <!-- Toolbar ở cuối màn hình -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFC5D8"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btntrangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFC5D8"
                android:layout_marginTop="5dp"
                android:src="@drawable/tc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#000000"
                android:text="Trang Chủ"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btntimkiem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFC5D8"
                android:layout_marginTop="5dp"
                android:src="@drawable/tkto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm Kiếm"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btncanhan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFC5D8"
                android:layout_marginTop="5dp"
                android:src="@drawable/nd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Cá Nhân"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
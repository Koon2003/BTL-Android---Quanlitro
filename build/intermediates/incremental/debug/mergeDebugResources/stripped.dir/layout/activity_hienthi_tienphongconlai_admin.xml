<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B2C4">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/maidtienconlai" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF0057"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/titleLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Tiền Phòng Còn Lại"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_marginTop="3dp"

        android:background="#F6B2C4"
        android:padding="16dp"> <!-- Đặt ScrollView bên dưới LinearLayout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-95dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mã Hồ Sơ"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mahoso"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Mã hồ sơ"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="ID Phòng thuê: "
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/id"
                    android:text=" Id phòng thuê"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#FF0000"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tiền phòng/ tháng: "
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/giatien"
                    android:text=" tienphong/thang"

                    android:textSize="15sp"
                    android:textColor="#673AB7"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="VNĐ "
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Họ và Tên"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/hovaten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Họ và tên"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Cccd người nộp: "
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cccd"
                        android:text=" cccd"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#FF1100"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:text="Ngày sinh:"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/ngaysinh"
                        android:text=" dd/MM/yyyy"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:text="Sđt:"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/sdt"
                        android:text=" sdt"
                        android:textColor="#001795"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>



            </LinearLayout>






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số tiền còn lại cần đóng"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/sotienconlai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusableInTouchMode="false"
                android:background="@drawable/edittext"
                android:hint="Số tiền còn lại"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Trạng thái"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/trangthai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chưa Đóng"
                android:background="@drawable/edittext"
                android:hint="Chưa Đóng"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
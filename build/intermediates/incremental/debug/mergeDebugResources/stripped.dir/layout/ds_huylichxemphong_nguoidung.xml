<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:layout_marginBottom="1dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        > <!-- Đặt TableLayout bên phải ImageView -->

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Id"
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/id"
                android:text="id"
                android:textColor="#3F51B5"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <!-- Các TableRow khác giữ nguyên -->
        <TableRow>
            <TextView
                android:text="Tendn"
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tendn"
                android:text="tendn"
                android:textColor="#079E0C"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Họ và tên :"
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/hovaten"
                android:text="hoten"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Quê quán:"
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/quequan"
                android:text="quê quán"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="SĐT :"
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sdt"
                android:text="sdt"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Ngày hẹn: "
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ngayhen"
                android:text="Ngày hen"
                android:textColor="#E40500"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Trạng thái: "
                android:textColor="#0021F6"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/trangthai"
                android:text="trangthai"
                android:textColor="#3F51B5"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>




</RelativeLayout>
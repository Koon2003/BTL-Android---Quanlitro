<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textColor="#FF0056"
            android:textStyle="bold"
            android:textSize="22sp"
       android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="chọn ngày xem phòng trọ"
            android:layout_height="wrap_content"></TextView>
<EditText
    android:layout_width="match_parent"
    android:background="@drawable/edittext"
   android:layout_margin="20dp"
android:paddingLeft="10dp"
    android:focusableInTouchMode="false"
    android:id="@+id/chọnngayxemphong"
    android:hint="Chọn ngày xem phòng trọ"
    android:drawableLeft="@drawable/ns"
    android:drawablePadding="10dp"
    android:layout_height="50dp"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:background="#009E04"
        android:textColor="#FFFF"
        android:text="Đặt NGAY"
        android:id="@+id/datlichngay"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"></Button></LinearLayout>
</RelativeLayout>
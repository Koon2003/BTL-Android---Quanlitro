        android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->
    <ImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"


        android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->




            <TextView
                android:id="@+id/id"
                android:text="id"
                android:textColor="#0021F6"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/phong"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phong">

    </ImageView>

    <TextView
        android:id="@+id/tenphong"
        android:text="Tên "
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
      android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>

            <TextView
                android:id="@+id/dientich"
                android:text="diện tích"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />



            <TextView
                android:id="@+id/giatien"
                android:text="giá tiền"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />



        <TextView
            android:id="@+id/mota"
            android:text="mô tả"
            android:textColor="#000000"
            android:textSize="12sp"
            android:maxLines="30"
            android:ellipsize="end"
            android:textStyle="italic"
android:layout_marginEnd="20dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />


    <ImageButton
        android:id="@+id/imgsua"
        android:layout_width="23dp"
        android:layout_height="23dp"

        android:background="@drawable/edit"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="85dp" />

    <ImageButton
        android:id="@+id/imgxoa"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cancel"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="85dp" />
</RelativeLayout>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"


        android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->
    <ImageView
        android:id="@+id/img3"
        android:layout_width="0dp"

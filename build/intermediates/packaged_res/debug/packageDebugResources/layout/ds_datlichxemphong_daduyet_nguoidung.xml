<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:id="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/lxp"
            android:layout_height="120dp"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tendn"
                android:text="tendn"
                android:textColor="#079E0C"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hovaten"
                android:text="hoten"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/quequan"
                android:text="quê quán"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sdt"
                android:text="sdt"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ngayhen"
                android:text="Ngày hen"
                android:textColor="#A700C3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/trangthai"
                android:text="trangthai"
                android:textColor="#3F51B5"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/id"
        android:text="id"
        android:textColor="#3F51B5"
        android:textSize="10sp"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="0dp" />



</RelativeLayout>
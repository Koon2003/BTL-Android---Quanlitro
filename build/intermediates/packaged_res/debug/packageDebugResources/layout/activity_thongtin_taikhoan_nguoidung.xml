<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFA8C9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="Thông Tin Tài Khoản Người Dùng"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="#F80053"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:layout_height="70dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/hovaten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên người dùng"
                        android:textColor="#673AB7"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#aaa"
                        android:layout_marginTop="5dp"
                        android:layout_height="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên đăng nhập: "
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:id="@+id/tendn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bacxg"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CCCD: "
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:id="@+id/cccd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="02849234"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#EF0000"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh: "
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:id="@+id/ngaysinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11/05/2003"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SĐT: "
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:id="@+id/sdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0892478"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quê quán: "
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginBottom="1dp" />
                        <TextView
                            android:id="@+id/quequan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hải Dương"
                            android:textSize="16sp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnquaylai"
                    android:layout_width="130dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="#D09B02"
                    android:paddingRight="10dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/b"
                    android:drawablePadding="1dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFF"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Quay lại" />
                <Button
                    android:id="@+id/btndoithongtin"
                    android:layout_width="220dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="#F80053"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:drawablePadding="1dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/tt"
                    android:textColor="#FFFF"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Thay đổi thông tin" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
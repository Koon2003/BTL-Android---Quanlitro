<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B2C4">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF0056"
        android:layout_height="70dp"
        android:gravity="center"

        android:id="@+id/titleLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm TÀI KHOẢN"
            android:textSize="24sp"
            android:textStyle="bold"

     android:layout_gravity="center_horizontal"
         android:textAllCaps="true"
            android:textColor="#FFFFFF"
             />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_marginTop="3dp"

        android:background="#F6B2C4"
        android:padding="16dp"> <!-- Đặt ScrollView bên dưới LinearLayout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"

                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tendn"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Tên đăng nhập"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Mật khẩu"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/matkhau"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Nhập Lại Mật khẩu"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nhaplaimatkhau"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Nhập Lại Mật khẩu"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Họ và tên"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/hovaten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Họ và tên"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="CCCD"
                android:textColor="#000000"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/cccd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="CCCD"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Ngày sinh"
                android:textColor="#000000"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/ngaysinh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="dd/MM/yyyy"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Quê quán"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/quequan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:focusableInTouchMode="false"
                android:hint="Quê quán"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số điện thoại"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/sdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Số điện thoại"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Loại khách hàng"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/quyen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:focusableInTouchMode="false"
                android:hint="Loại khách hàng"
                android:paddingLeft="10dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#3F51B5"
                android:paddingLeft="20dp"
          android:layout_marginLeft="10dp"

                android:layout_marginRight="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="50dp"
                android:text="THÊM TÀI KHOẢN"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#FF0000"
                android:paddingLeft="10dp"

                android:paddingRight="20dp"
                android:layout_marginBottom="50dp"
                android:text="HỦY BỎ NGAY"
                android:textColor="#FFFFFF" />
</LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
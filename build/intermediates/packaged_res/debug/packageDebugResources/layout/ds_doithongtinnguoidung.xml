<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFA8C9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tendn"
         />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="24dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin"
                android:fontFamily="sans-serif-medium"
                android:textColor="#3F51B5"
                android:textSize="24sp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#3F51B5"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Họ và tên"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/hovaten"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:drawableLeft="@drawable/tdn"
                android:textColorHint="#C1C1C1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="12dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="CCCD"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/cccd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CCCD"
                android:paddingLeft="15dp"
                android:textColorHint="#C1C1C1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/cccd"
                android:padding="12dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Ngày sính"
                android:textColor="#000000"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ngaysinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/MM/yyyy"
                android:paddingLeft="15dp"
                android:textColorHint="#C1C1C1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/ns"
                android:padding="12dp"
                android:focusableInTouchMode="false"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Quê Quán"
                android:textColor="#000000"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/quequan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quê quán"
                android:paddingLeft="15dp"
                android:textColorHint="#C1C1C1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/vitri"
                android:padding="12dp"
                android:focusableInTouchMode="false"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Sđt"
                android:textColor="#000000"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sđt"
                android:paddingLeft="15dp"
                android:textColorHint="#C1C1C1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/sdt"
                android:padding="12dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCapnhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#0CB113"
                    android:paddingLeft="20dp"


                    android:layout_marginRight="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:text="CẬP NHẬT NGAY"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/btnHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#FF0000"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:text="HỦY BỎ NGAY"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
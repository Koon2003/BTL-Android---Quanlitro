<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA0C2">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#d81f51"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="80dp"

                android:src="@drawable/img_1" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:id="@+id/btndangxuat"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dx" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFA0C2"
            android:orientation="vertical">

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/sl1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp" />

            <!-- User Profile Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Quản lí user và hồ sơ trọ và phòng trọ"
                android:textColor="#001595"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFF165" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <!-- Profile Options -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <!-- Profile Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hồ Sơ Thuê Trọ"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btnhosothuetro"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/hstt"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Profile Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tài Khoản User"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btntaikhoan"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nd"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Profile Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Phòng Trọ"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btnphongtro"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/tc"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Bill Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Quản lí hóa đơn điện, nước"
                android:textColor="#001595"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFF165" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <!-- Bill Options -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!-- Bill Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Điện"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btntiendien"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/td"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bill Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Nước"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btntiennuoc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/tn"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bill Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Phòng"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btntienphong"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/phong"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Appointment Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Quản Lí Lịch Hẹn Xem Phòng"
                android:textColor="#001595"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFF165" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7AF44336" />

            <!-- Appointment Options -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <!-- Appointment Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chờ phê duyệt"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btnlichhenchoduyet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/lichchoduyet"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Appointment Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã được duyệt"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btnlichhendaduyet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/lichdaduyet"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Appointment Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lịch hẹn đã hủy"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <ImageButton
                            android:id="@+id/btnlichhendahuy"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/lichhuy"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
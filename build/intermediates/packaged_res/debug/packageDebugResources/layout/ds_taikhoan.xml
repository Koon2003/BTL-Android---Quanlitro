<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:layout_marginBottom="1dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/user"></ImageView>

    <TextView
        android:id="@+id/tendn"
        android:text="tendn"
        android:layout_gravity="center"
        android:textColor="#01A007"
        android:textSize="21sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/quyen"
        android:text="Vai trò"

        android:textSize="15dp"
        android:layout_gravity="center"
        android:textStyle="bold"
android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>


            <TextView
                android:id="@+id/matkhau"
                android:text="matkhau"
                android:textColor="#079E0C"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />



            <TextView
                android:id="@+id/hovaten"
                android:text="hoten"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />



            <TextView
                android:id="@+id/ngaysinh"
                android:text="ngay sinh"
                android:textColor="#000000"
                android:textSize="10sp"
                android:maxLines="8"
                android:ellipsize="end"
                android:textStyle="italic"
                android:paddingEnd="150dp"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <TextView
                android:id="@+id/cccd"
                android:text="cccd"
                android:textColor="#000000"
                android:textSize="10sp"
                android:maxLines="8"
                android:ellipsize="end"
                android:textStyle="italic"
                android:paddingEnd="150dp"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/quequan"
                android:text="quê quán"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/sdt"
                android:text="sdt"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="0dp" />




    <ImageButton
        android:id="@+id/imgsua"
        android:layout_width="23dp"
        android:layout_height="23dp"

        android:background="@drawable/edit"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="95dp" />

    <ImageButton
        android:id="@+id/imgxoa"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cancel"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="95dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tendn"></TextView>
    <!-- ScrollView chứa nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFA8C9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:text="TRANG CÁ nhân người dùng"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="#F80053"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:layout_height="60dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <!-- Tên phòng trọ -->

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/hovaten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên người dùng"
                    android:textColor="#673AB7"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cccd: "
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>
                    <!-- Giá tiền -->
                    <TextView
                        android:id="@+id/cccd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 02849234"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#EF0000"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh: "
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/ngaysinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/05/2003"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <!-- Diện tích -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sđt: "
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0892478"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quê quán:"

                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="1dp"/>

                    <!-- Mô tả -->
                    <TextView
                        android:id="@+id/quequan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" hải dương"
                        android:textSize="16sp"

                        android:layout_marginBottom="1dp"/>

                    <!-- Nút đặt lịch xem phòng -->
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="#7AF44336"
                android:layout_height="2dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="Hồ sơ người dùng"
                android:textColor="#001595"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"

                android:background="#FFF165"
                android:layout_height="30dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:background="#7AF44336"
                android:layout_height="2dp"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- LinearLayout để sắp xếp TextView và ImageButton theo chiều dọc -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- TextView -->
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hồ Sơ Thuê Trọ"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ImageButton -->
                        <ImageButton
                            android:id="@+id/btnhosothuetro"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/hstt"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- LinearLayout để sắp xếp TextView và ImageButton theo chiều dọc -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- TextView -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông Tin Tài Khoản"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ImageButton -->
                        <ImageButton
                            android:id="@+id/btnthongtintaikhoan"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nd"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="#7AF44336"
                android:layout_height="2dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="Hóa đơn các loại"
                android:textColor="#001595"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"

                android:background="#FFF165"
                android:layout_height="30dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:background="#7AF44336"
                android:layout_height="2dp"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- LinearLayout để sắp xếp TextView và ImageButton theo chiều dọc -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- TextView -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Điện"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ImageButton -->
                        <ImageButton
                            android:id="@+id/btntiendien"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/td"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- LinearLayout để sắp xếp TextView và ImageButton theo chiều dọc -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- TextView -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Nước"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ImageButton -->
                        <ImageButton
                            android:id="@+id/btntiennuoc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/tn"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- LinearLayout để sắp xếp TextView và ImageButton theo chiều dọc -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- TextView -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền Phòng"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ImageButton -->
                        <ImageButton
                            android:id="@+id/btntienphong"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/phong"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:background="#7AF44336"
                android:layout_height="2dp"></TextView>
            <Button
                android:id="@+id/btndangxuat"
                android:layout_width="220dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="#F80053"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#FFFF"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="Đăng Xuất Ngay"/>
        </LinearLayout>
    </ScrollView>

    <!-- Các TextView ẩn (nếu cần) -->


    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
</RelativeLayout>
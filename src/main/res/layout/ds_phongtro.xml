<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/img5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/id"
        android:text="id"
        android:textColor="#0021F6"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/phong"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phong" />
        <TextView
            android:id="@+id/tenphong"
            android:text="Tên "
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/dientich"
        android:text="diện tích"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/giatien"
        android:text="giá tiền"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/mota"
        android:text="mô tả"
        android:textColor="#000000"
        android:textSize="12sp"
        android:maxLines="30"
        android:ellipsize="end"
        android:textStyle="italic"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <ImageButton
        android:id="@+id/icon_edit"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-2dp"
        android:contentDescription="Sửa phòng"
        android:src="@drawable/edit" />

    <ImageButton
        android:id="@+id/icon_xoa"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_below="@id/icon_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-2dp"
        android:contentDescription="Xóa phòng"
        android:src="@drawable/xoa" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B2C4">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/idnuoc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF0057"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/titleLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin BILL Tiền NƯớc"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_marginTop="3dp"

        android:background="#F6B2C4"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng thuê"

                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:focusableInTouchMode="false"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Phòng đóng tiền nước"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Đóng tiền nước tháng/năm"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/dongtiennuocthangnam"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Đóng tiền nước cho tháng/năm"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số khối tiêu thụ"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/sokhoitieuthu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Số khối tiêu thu"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Giá tiền 1 khối nước"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/giatien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:hint="Giá tiền 1 khối nước"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Tổng Tiền Thanh Toán"
                android:textColor="#000000"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/tongtien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusableInTouchMode="false"
                android:background="@drawable/edittext"
                android:hint="Tổng tiền thanh toán"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Trạng Thái"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/trangthai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:focusableInTouchMode="false"
                android:hint="Trạng Thái"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>